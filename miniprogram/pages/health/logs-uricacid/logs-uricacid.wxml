<!--pages/health/logs-uricacid/logs-uricacid.wxml-->

<!-- 标题栏 -->
<view class="header-bar">
  <text>嘌呤记录</text>
</view>

<!-- 标签栏 -->
<view class="tabs-container">
  <view class="tab" wx:for="{{['week', 'month', 'year']}}" data-tab="{{item}}" bindtap="onTabChange" wx:class="{{item === activeTab ? 'active' : ''}}">{{item === 'week' ? '周视图' : item === 'month' ? '月视图' : '年视图'}}</view>
  <view class="indicator" style="left: {{indicatorLeft}};"></view>
</view>

<!-- 图片容器 -->
<view class="image-container">
  <image src="{{static_base}}/banner-health_home.jpg" mode="aspectFit" />
</view>

<!-- 表格 -->
<view class="table-container">
  <!-- 表头 -->
  <view class="table-header">
    <text class="header-item"></text> <!-- 空的表头项用于占位 -->
    <text class="header-item">早餐</text>
    <text class="header-item">午餐</text>
    <text class="header-item">晚餐</text>
  </view>
  <!-- 第二行 -->
  <view class="table-row">
    <text class="header-item">达标摄取</text>
    <text class="table-item">350</text>
    <text class="table-item">99</text>
    <text class="table-item">200</text>
  </view>
  <!-- 第三行 -->
  <view class="table-row">
    <text class="header-item">最近7天</text>
    <view class="table-item">
      <text>150</text><text class="arrow">↓</text>
    </view>
    <view class="table-item">
      <text>77</text><text class="arrow">↓</text>
    </view>
    <view class="table-item">
      <text>114</text><text class="arrow">↓</text>
    </view>
  </view>
</view>

<!-- 浮动按钮 -->
<view class="floating-button" bind:tap="onTapToUricacidAdd">
  <image src="{{static_base}}/icon-add.png" class="button-image"/>
</view>

<!-- 底部 Tab Bar -->
<view class="tab-bar">
  <view class="tab-item" data-tab="food" bind:tap="onTabTap">
    <image src="{{static_base}}/icon-food.png" mode="aspectFit" />
    <text>嘌呤摄入</text>
  </view>
  <view class="tab-item active" data-tab="uricacid" bind:tap="onTabTap">
    <image src="{{static_base}}/icon-logs.png" mode="aspectFit" />
    <text>尿酸测量</text>
  </view>
  <view class="tab-item" data-tab="flareup" bind:tap="onTabTap">
    <image src="{{static_base}}/icon-calendar.png" mode="aspectFit" />
    <text>发作情况</text>
  </view>
</view>