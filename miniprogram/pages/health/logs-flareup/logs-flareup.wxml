<!--pages/health/logs-flareup/logs-flareup.wxml-->

<!-- 标题栏 -->
<view class="header-bar">
  <text>发作记录</text>
</view>

<!-- 标签栏 -->
<view class="tabs-container">
  <view class="tab active" data-tab="tab1" bindtap="onTabChange">周视图</view>
  <view class="tab" data-tab="tab2" bindtap="onTabChange">月视图</view>
  <view class="tab" data-tab="tab3" bindtap="onTabChange">年视图</view>
  <view class="indicator"></view>
</view>

<!-- 图片容器 -->
<view class="image-container">
  <image src="{{static_base}}/banner-health_home.jpg" mode="aspectFit" />
</view>

<!-- 表格 -->
<view class="table-container">
  <view class="table-header">
    <text class="header-item"></text> <!-- 空的表头项用于占位 -->
    <text class="header-item">发作次数</text>
    <text class="header-item">平均强度</text>
  </view>
  <view class="table-row">
    <text class="header-item">该周数据</text>
    <text class="table-item">3</text>
    <text class="table-item">1.29</text>
  </view>
  <view class="table-row">
    <text class="header-item">最近7天</text>
    <view class="table-item">
      <text>4</text><text class="arrow">↓</text>
    </view>
    <view class="table-item">
      <text>1.51</text><text class="arrow">↓</text>
    </view>
  </view>
</view>


<!-- 浮动按钮 -->
<view class="floating-button">
  <image src="{{static_base}}/icon-add.png" class="button-image"/>
</view>

<!-- 底部 Tab Bar -->
<view class="tab-bar">
  <view class="tab-item">
    <image src="{{static_base}}/icon-food.png" mode="aspectFit" />
    <text>嘌呤摄入</text>
  </view>
  <view class="tab-item">
    <image src="{{static_base}}/icon-logs.png" mode="aspectFit" />
    <text>尿酸测量</text>
  </view>
  <view class="tab-item active">
    <image src="{{static_base}}/icon-calendar.png" mode="aspectFit" />
    <text>发作情况</text>
  </view>
</view>